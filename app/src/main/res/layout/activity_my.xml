<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MyActivity">

    <TextView android:text="My Nanodegree Apps!" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:layout_marginTop="20dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="24dp"
        />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="29dp">

        <Button
            android:layout_width="193dp"
            android:layout_height="wrap_content"
            android:text="Popular Movies"
            android:id="@+id/project1"
            android:layout_gravity="center_horizontal"
            android:background="#f08c35"
            android:layout_marginBottom="8dp"
            android:onClick="project1_clicked"/>

        <Button
            android:layout_width="193dp"
            android:layout_height="wrap_content"
            android:text="Scores App"
            android:id="@+id/project2"
            android:layout_gravity="center_horizontal"
            android:background="#f08c35"
            android:layout_marginBottom="8dp"
            android:onClick="project2_clicked"/>

        <Button
            android:layout_width="193dp"
            android:layout_height="wrap_content"
            android:text="Library App"
            android:id="@+id/project3"
            android:layout_gravity="center_horizontal"
            android:background="#f08c35"
            android:layout_marginBottom="8dp"
            android:onClick="project3_clicked"/>

        <Button
            android:layout_width="193dp"
            android:layout_height="wrap_content"
            android:text="Build it Bigger"
            android:id="@+id/project4"
            android:layout_gravity="center_horizontal"
            android:background="#f08c35"
            android:layout_marginBottom="8dp"
            android:onClick="project4_clicked"/>

        <Button
            android:layout_width="193dp"
            android:layout_height="wrap_content"
            android:text="XYZ Reader"
            android:id="@+id/project5"
            android:layout_gravity="center_horizontal"
            android:background="#f08c35"
            android:layout_marginBottom="8dp"
            android:onClick="project5_clicked"/>

        <Button
            android:layout_width="193dp"
            android:layout_height="wrap_content"
            android:text="Capstone: My Own App"
            android:id="@+id/project6"
            android:layout_gravity="center_horizontal"
            android:background="#f02355"
            android:onClick="project6_clicked"/>
    </LinearLayout>

</RelativeLayout>
